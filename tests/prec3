class Expression {
  %parseable;
  sample('4-1+2-5', print);
  sample('4-1+2+3-5', print);
  sample('4-1*2-5', print);
  sample('4-1*2*3-5', print);
  sample('4*1+2+3*5', print);
  sample('4+1*2*3+5', print);
  sample('1*2-3*4*5/6*7*8', print);
}

class Sum: Expression {
  Expression args[];
  syntax(args+'+') %left 1;
}

class Diff: Expression {
  Expression arg1;
  Expression arg2;
  syntax(arg1 '-' arg2) %left 1;
}

class Prod: Expression {
  Expression args[];
  syntax(args+'*') %left 1;
}

class Div: Expression {
  Expression arg1;
  Expression arg2;
  syntax(arg1 '/' arg2) %left 2;
}

class Base : Expression {
  int n;
  syntax(n);
}
